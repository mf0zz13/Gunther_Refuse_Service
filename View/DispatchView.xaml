<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GuntherRefuse.View.DispatchView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GuntherRefuse.ViewModel"
             xmlns:model="clr-namespace:GuntherRefuse.Model"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:DataType="viewmodel:DispatchViewModel">

    <Grid ColumnDefinitions="Auto,Auto,*,*"
          RowDefinitions="Auto,Auto,*,*"
          Padding="10">
        <Label Grid.Column="0"
               Grid.Row="0"
               Text="{Binding Dispatch.FormattedTruckName}"/>
        <HorizontalStackLayout Grid.Column="0"
                               Grid.Row="1">
            <Label Text="Date:"/>
            <DatePicker Date="{Binding Dispatch.Date}"/>
        </HorizontalStackLayout>

        <StackLayout Grid.Column="1"
                     Grid.Row="2">
            <Label Text="Service Area"/>
            <Entry Text="{Binding Dispatch.ServiceArea}"/>

            <Label Text="Collection Type"/>
            <Picker ItemsSource="{Binding CollectionTypes}"/>
        </StackLayout>

        <StackLayout Grid.Column="2"
                     Grid.Row="2">
            <Label Text="Driver"/>
        </StackLayout>
    </Grid>

</ContentPage>